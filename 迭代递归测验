/*
一个检验算法的小程序 
*/
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <windows.h>
int digui(int num);
int whole_sum=0;
int diedai(int num);
int main(){
	int num=0;
	scanf("%d",&num);
	time_t tstart=clock();
	digui(num);
	printf("%d\n",whole_sum);
	time_t tend=clock();
 	printf("The pause used %f ms by digui()\n",difftime(tend,tstart));   
	tstart=clock();
	printf("%d\n",diedai(num));
	tend=clock();  
    printf("The pause used %f s by diedai()\n",difftime(tend,tstart));  
	return 0; 
} 
int digui(int num){
	int this_sum=0;
	if(num>=1) this_sum=digui(num-1)+num;
	whole_sum=whole_sum+this_sum;
	return this_sum;
}
int diedai(int num){
	int sum=0;
	for(int i=1;i<=num;i++){
		int thissum=0;
		for(int j=1;j<=i;j++){
			thissum+=j;
		}
		sum+=thissum;
	}
	return sum;
}
