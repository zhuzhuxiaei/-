#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
bool judgeISUSED(int x,int y,int a[8][8]);
bool judgeISOUT(int x,int y);
int main(){
	 int a[8][8]={0};
	 int x=0,y=0;
	 printf("请输入坐标");
	 scanf("%d %d",&x,&y);
	 int xNext[8],yNext[8];
	 int count=0;
	 while(true){
		xNext[0]=xNext[3]=x+1;
		xNext[4]=xNext[7]=x-1;
		xNext[1]=xNext[2]=x+2;
		xNext[5]=xNext[6]=x-2;
		
		yNext[0]=yNext[7]=y+2;
		yNext[1]=yNext[6]=y+1;
		yNext[2]=yNext[5]=y-1;
		yNext[3]=yNext[4]=y-2;
		for(int i=0;i<=7;i++){
			printf("hello\n");			
			if(judgeISUSED(xNext[i],yNext[i],a)==false&&judgeISOUT(xNext[i],yNext[i])==false){
				a[x][y]=count;
				count++;
				printf("%d %d",x,y);
				x=xNext[i],y=yNext[i];
				break;		
			}
		}
		if(count==64) break;
	 }
 	return 0;
}
bool judgeISUSED(int x,int y,int a[8][8]){
	if(a[x][y]==0) return false;
	else return true;//如果用过就会返回true
}
bool judgeISOUT(int x,int y){
	if(x<0||x>7||y<0||y>7) return true;
	else {return false};//如果超出就会返回true
}
